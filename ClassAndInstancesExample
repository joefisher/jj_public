class Employee:
    def __init__(self,fname,lname,pay):
    self.fname = fname
    self.lname = lname
    self.pay = pay
    self.email = fname + '.' + lname + '@company.com'

def fullname(self):
    return'{} {}'.format(self.fname, self.lname)

emp_1.Employee('Juliette', 'Emge', 100,000)
emp_2.Employee('Joe', 'Fisher', 200,000)
emp_3.Employee('Jade', 'Fisher', 202,000)

print(emp_1.fullname())
print(Employee.fullname(emp_1))
